<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/radio_rl"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/radio_rl_tag"
        android:gravity="center"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/radio_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/radio_iv_empty_tag" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title_ringtone_tv"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:gravity="bottom"
        android:text="TextView"
        android:textColor="@color/cardview_dark_background"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/radio_rl"
        android:layout_toRightOf="@+id/radio_rl"
        android:layout_toEndOf="@+id/radio_rl"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#767676"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignLeft="@+id/title_ringtone_tv"
        android:layout_alignStart="@+id/title_ringtone_tv" />
</RelativeLayout>
